@import '001func.styl'

@font-face
  font-family "HelveticaBold"
  src url("../fonts/HelveticaBold/HelveticaBold.eot")
  src url("../fonts/HelveticaBold/HelveticaBold.eot?#iefix")format("embedded-opentype"),
  url("../fonts/HelveticaBold/HelveticaBold.woff") format("woff"),
  url("../fonts/HelveticaBold/HelveticaBold.ttf") format("truetype")
  font-style normal
  font-weight normal


*
  box-sizing border-box

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i, dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  background transparent
  border 0
  font-size 100%
  margin 0
  outline 0
  padding 0
  vertical-align baseline

body 
  line-height 1 
  background backGrey
  font-family Arial

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

nav ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none

a
  background transparent
  font-size 12px
  margin 0
  padding 0
  vertical-align baseline
  text-decoration none

mark
    font-style italic
    font-weight 700

del
  text-decoration line-through

abbr[title], dfn[title]
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0

/* change border colour to suit your needs */
hr
  border 0
  border-top 1px solid #ccc
  display block
  height 1px
  margin 1em 0
  padding 0

input, select 
  vertical-align middle

span 
  font-size 12px

/* Defaults */

.val-side-menu
  width 200px
  background #fff
  position fixed
  left 0
  top 0
  z-index 1
  height 100%
  padding 20px
  display flex
  flex-direction column
  justify-content space-between

.val-slide-top, .val-slide-bottom
  width 100%
  
.val-slide-bottom
  text-align center
  
.val-slide-development
  padding 10px 0
  display inline-block

.val-side-menu h4
  color #000
  font-size 19px
  font-family HelveticaBold
  margin 15px 0
  line-height 19px

.val-side-menu-list
  padding 0 0 15px 5px
  list-style none

.val-side-menu-text
  display block
  margin-bottom 15px

.val-side-menu-text a 
  color generalGreenColor
  border-bottom 1px solid rgb(177, 220, 217)
  padding 1px 0
  &:hover
    border-bottom 1px solid transparent

.val-side-menu-list li
  padding 3px 0

.val-side-menu-list li a 
  color #000
  font-size 13px
  &:hover
    color generalGreenColor

.uptolike-buttons
  float right 
  margin 20px 0

.val-alert
  position relative
  z-index 999999
  
.val-alert p 
  padding 20px 

.val-flash-close
  width 16px 
  height 16px
  background url(../images/sprite.png) -218px 22px
  display inline-block
  position absolute 
  right 20px 
  top 10px 

.val-form-control
  width 100%
  height 32px
  border 1px solid #DDDDDD
  padding 0 10px
  margin-bottom 15px
  background #fff
  color lightGreyText

.val-all-outer
  width 100%
  display table
  position relative
  z-index 9
  transition .5s
  background #f6f6f6
  box-shadow 0 0 7px 1px rgba(0,0,0,.2)
  
.val-all-outer-animate
  transform translateX(200px)

.val-slim-outer
  width 100%
  overflow hidden

.button
  font-size 12px
  color #fff
  text-transform uppercase
  padding 10px 25px
  border none
  margin-left 7px
  border-radius 2px
  display inline-block  
  cursor pointer
  transition .2s ease-out

.-gen-green
  background generalGreenColor
  &:hover 
    background generalBlueColor
	
.-gen-blue
  background generalBlueColor
  &:hover 
    background generalGreenColor 

